{% extends '@Modules/democontrollertabs/views/templates/admin/layout.html.twig' %}

{% block controllerTitle %}{{ 'Minimalist controller'|trans({}, 'Modules.Controllertab.Admin') }}{% endblock %}

{% block controllerDescription %}
    <div class="row justify-content-center">
        <div class="col">
            <h2>Minimalist controller</h2>
            <p>
                <ul>
                    <li>It has no security</li>
                    <li>It has no legacy parameter to help generating its url</li>
                    <li>It also has no tab so it is only accessible via an url generated by the Symfony router</li>
                </ul>
            </p>

            <h3>Routing file</h3>
            <pre>
                <code class="yaml">
# {your_module}/config/routes.yml
ps_controller_tabs_minimalist:
    path: /configure-tabs/minimalist
    methods: [GET]
    defaults:
        _controller: 'PrestaShop\Module\DemoControllerTabs\Controller\Admin\MinimalistController::indexAction'
                </code>
            </pre>

            <h3>Minimalist Controller</h3>
            <pre>
                <code class="php">
class MinimalistController extends FrameworkBundleAdminController
{
    /**
     * @return Response
     */
    public function indexAction()
    {
        return $this->render('@Modules/democontrollertabs/views/templates/admin/minimalist.html.twig');
    }
}
                </code>
            </pre>
        </div>
    </div>
{% endblock %}
